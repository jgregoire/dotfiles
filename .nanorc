# Line-by-line scrolling
#set smooth

# Auto-indentation
#set autoindent

# Set tab size
set tabsize 4

# Enable mouse use
#set mouse

# Cut to end of line
#set cut

# Remove blank line below title bar
#set morespace

# Mouse support
set mouse

# General syntax highlighting
syntax "comments" ".*"
color brightblue "\#.*"

